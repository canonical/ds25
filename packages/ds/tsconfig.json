{
  "extends": "@canonical/typescript-config-react",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist/esm",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".storybook/*.ts",
    ".storybook/*.tsx"
  ]
}
