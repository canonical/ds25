{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/esm",
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": false,
    "types": ["node", "react", "react-dom", "vite/client"]
  },
  "exclude": [
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    ".storybook",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
