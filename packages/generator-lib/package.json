{
  "name": "@canonical/generator-lib",
  "version": "0.0.1",
  "main": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "files": ["dist"],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "bun run src/index.ts",
    "lint": "biome lint src/**/*.{ts,tsx}",
    "format": "bun run format:biome",
    "format:biome": "biome format src/**/*.{ts,tsx}",
    "check": "bun run check:biome && bun run check:ts",
    "check:fix": "bun run check:biome:fix",
    "check:biome": "biome check src/**/* *.json",
    "check:biome:fix": "biome check --write src/**/* *.json",
    "check:ts": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "ejs": "^3.1.10",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@canonical/typescript-config-base": "^0.1.1-experimental.0",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.6.2"
  }
}
