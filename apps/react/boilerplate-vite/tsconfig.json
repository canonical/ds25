{
  "extends": "@canonical/typescript-config-react",
  "compilerOptions": {
    "baseUrl": "src",
    "skipLibCheck": true, // Remove if not using storybook
    "types": [
      "node",
      "react",
      "react-dom",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".storybook/*.ts",
    ".storybook/*.tsx",
    "vite.config.ts",
    "vitest.setup.ts",
    "vitest.config.ts"
  ]
}
